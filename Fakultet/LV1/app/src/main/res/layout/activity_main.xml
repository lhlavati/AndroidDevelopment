<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E40A3"
    android:orientation="vertical"
    android:textColor="#FFFFFF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/height"
        android:textColor="#FFFF"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="centimeters"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/weight"
        android:textColor="#FFFF"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="kilograms"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/calculate" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="411dp">

        <TextView
            android:id="@+id/numBMI"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:text=""
            android:textColor="#FFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtBMI"
            android:layout_width="150dp"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:layout_below="@id/numBMI"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:text=""
            android:textColor="#FFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/descBMI"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtBMI"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:text=""
            android:textColor="#FFFF"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="179dp"
            android:layout_height="173dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="left"
            android:layout_marginEnd="216dp"
            android:layout_marginRight="216dp"
            android:layout_marginBottom="157dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/fatkid" />

    </RelativeLayout>

</LinearLayout>